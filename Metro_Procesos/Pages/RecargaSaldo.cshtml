@page
@model Metro_Procesos.Pages.RecargaSaldoModel
@{
    ViewData["Title"] = "Metro de Quito - Métodos de Recarga";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 mx-auto rounded"
         style="max-width:700px; background-color:#ffffff; border-top:8px solid #e60000; position: relative;">

        <div style="position:absolute; top:10px; left:10px;">
            <a href="javascript:window.history.back();" class="d-inline-block">
                <img src="https://i.pinimg.com/564x/35/b3/c1/35b3c1ecf233d242dc8d504203eebeec.jpg"
                     alt="Volver"
                     class="img-fluid rounded-circle shadow-sm"
                     style="width:40px; height:40px; cursor:pointer;">
            </a>
        </div>

        <h2 class="text-center text-danger fw-bold mb-4">Seleccione su Método de Pago</h2>

        <form method="post">
            <div class="row text-center justify-content-center">

                <div class="col-md-5 mb-4">
                    <label for="transferencia" style="cursor:pointer;">
                        <img src="https://cdn.worldvectorlogo.com/logos/banco-pichincha-nuevo-logo-fondo-amarillo.svg"
                             alt="Transferencia"
                             class="img-fluid rounded shadow-sm mb-2"
                             style="max-height:120px; width: 100%; object-fit: contain;">
                    </label>
                    <div class="form-check d-flex justify-content-center align-items-center">
                        <input class="form-check-input border-danger" type="radio" asp-for="Metodo" value="Transferencia" id="transferencia" required>
                        <label class="form-check-label fw-semibold text-danger ms-2" for="transferencia">
                            Transferencia
                        </label>
                    </div>
                </div>

                <div class="col-md-5 mb-4">
                    <label for="tarjeta" style="cursor:pointer;">
                        <img src="https://micuenta.pichincha.com/onb-mfa-login/8c20d69b26237c1a39ba.png"
                             alt="Tarjeta"
                             class="img-fluid rounded shadow-sm mb-2"
                             style="max-height:120px; width: 100%; object-fit: contain;">
                    </label>
                    <div class="form-check d-flex justify-content-center align-items-center">
                        <input class="form-check-input border-danger" type="radio" asp-for="Metodo" value="Tarjeta" id="tarjeta" required>
                        <label class="form-check-label fw-semibold text-danger ms-2" for="tarjeta">
                            Tarjeta de Crédito / Débito
                        </label>
                    </div>
                </div>

            </div>

            <button type="submit" class="btn w-100 fw-bold mt-4"
                    style="background-color:#e60000; color:#fff;">
                Confirmar Método de Pago
            </button>
        </form>
    </div>
</div>
