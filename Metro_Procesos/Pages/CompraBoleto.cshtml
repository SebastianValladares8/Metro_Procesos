@page
@model Metro_Procesos.Pages.MetodosPagoCompraModel
@{
    ViewData["Title"] = "Metro de Quito - Comprar Boleto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 card shadow-lg p-4 rounded"
             style="background-color:#ffffff; border-top:8px solid #e60000;">

            <!-- Botón pequeño en esquina superior izquierda con imagen -->
            <div style="position:absolute; top:10px; left:10px;">
                <a href="javascript:window.history.back();"
                   class="d-inline-block">
                    <img src="https://i.pinimg.com/564x/35/b3/c1/35b3c1ecf233d242dc8d504203eebeec.jpg"
                         alt="Volver"
                         class="img-fluid rounded-circle shadow-sm"
                         style="width:40px; height:40px; cursor:pointer;">
                </a>
            </div>


            <!-- Encabezado -->
            <h2 class="text-center mb-4 text-danger fw-bold">Compra de Boleto</h2>

            <!-- Campo nombre -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-danger">Nombre completo del usuario</label>
                <input type="text" class="form-control border-danger" placeholder="Ej: Juan Pérez">
            </div>

            <!-- Campo cédula -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-danger">Número de cédula</label>
                <input type="text" class="form-control border-danger" placeholder="Ingrese 10 dígitos">
            </div>

            <!-- Botones -->
            <div class="d-grid gap-2 mt-4">
                <a asp-page="/MetodosPagoCompra"
                   class="btn btn-lg fw-bold"
                   style="background-color:#e60000; color:#fff;">
                    Método de Pago
                </a>

                <a asp-page="/Usuario"
                   class="btn btn-outline-danger fw-semibold">
                    Cancelar y volver
                </a>
            </div>

        </div>
    </div>
</div>
